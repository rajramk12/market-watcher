<% content_for :title, "Stocks" %>

<div class="stocks-page">
  <!-- Alert Messages -->
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle me-2"></i><%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <!-- Page Header -->
  <div class="page-header mb-4">
    <div class="row align-items-center justify-content-between">
      <div class="col">
        <h1 class="page-title">
          <i class="fas fa-chart-line me-2"></i>Stocks Directory
        </h1>
        <p class="text-muted">Manage and monitor all stocks in your portfolio</p>
      </div>
      <div class="col-auto">
        <span class="badge bg-primary badge-lg"><%= @stocks.count %> Stocks</span>
      </div>
    </div>
  </div>

  <!-- Stocks Grid -->
  <div id="stocks" class="stocks-grid">
    <% if @stocks.any? %>
      <% @stocks.each do |stock| %>
        <div class="stock-wrapper">
          <%= render stock %>
          <div class="stock-actions mt-3">
            <%= link_to "View Details", stock, class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="alert alert-info text-center py-5">
        <i class="fas fa-inbox fa-2x mb-3 d-block"></i>
        <p class="mb-0">No stocks found. Start by adding your first stock!</p>
      </div>
    <% end %>
  </div>

  <!-- Footer Navigation -->
  <div class="stocks-footer mt-5 pt-4 border-top">
    <div class="row">
      <div class="col">
        <%= link_to "â† Back", stocks_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>

<style>
  .stocks-page {
    padding: 2rem 0;
  }

  .page-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #f0f0f0;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #212529;
    margin-bottom: 0.5rem;
  }

  .badge-lg {
    font-size: 0.95rem;
    padding: 0.6rem 1rem;
  }

  .stocks-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .stock-wrapper {
    display: flex;
    flex-direction: column;
  }

  .stock-wrapper .stock-card {
    flex: 1;
  }

  .stock-actions {
    display: flex;
    gap: 0.5rem;
  }

  .stock-actions .btn {
    flex: 1;
    font-size: 0.875rem;
  }

  .stocks-footer {
    text-align: center;
  }

  @media (max-width: 768px) {
    .stocks-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .page-title {
      font-size: 1.75rem;
    }

    .page-header {
      margin-bottom: 2rem;
    }
  }

  @media (max-width: 576px) {
    .stocks-page {
      padding: 1rem 0;
    }

    .page-header {
      padding-bottom: 1rem;
    }
  }
</style>
