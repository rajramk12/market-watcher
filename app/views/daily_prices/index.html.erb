<% content_for :title, "Daily Prices" %>

<div class="daily-prices-page">
  <!-- Alert Messages -->
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle me-2"></i><%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <!-- Page Header -->
  <div class="page-header mb-4">
    <div class="row align-items-center justify-content-between">
      <div class="col">
        <h1 class="page-title">
          <i class="fas fa-chart-area me-2"></i>Daily Price History
        </h1>
        <p class="text-muted">Track historical price movements and market data</p>
      </div>
      <div class="col-auto">
        <span class="badge bg-primary badge-lg"><%= @daily_prices.count %> Records</span>
      </div>
    </div>
  </div>

  <!-- Daily Prices Grid -->
  <div id="daily_prices" class="daily-prices-grid">
    <% if @daily_prices.any? %>
      <% @daily_prices.each do |daily_price| %>
        <%= render daily_price %>
      <% end %>
    <% else %>
      <div class="alert alert-info text-center py-5 col-12">
        <i class="fas fa-inbox fa-2x mb-3 d-block"></i>
        <p class="mb-0">No price data available. Historical prices will appear here.</p>
      </div>
    <% end %>
  </div>

  <!-- Footer Navigation -->
  <div class="daily-prices-footer mt-5 pt-4 border-top">
    <div class="row">
      <div class="col">
        <%= link_to "â† Back", daily_prices_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
